  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${gen.source.directory}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.3.1</version>
        <executions>
          <!-- from tdi-studio-se -->
          <execution>
            <id>copy-org.talend.designer.components.localprovider-thash</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/designer/components/thash</outputDirectory>
              <resources>
                <resource>
                  <directory>${tdi.studio.se.path}/org.talend.designer.components.localprovider/src/main/java/org/talend/designer/components/thash</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <!-- from tdi-studio-se -->
          <execution>
            <id>copy-org.talend.designer.components.localprovider-persistent</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/designer/components/persistent</outputDirectory>
              <resources>
                <resource>
                  <directory>${tdi.studio.se.path}/org.talend.designer.components.localprovider/src/main/java/org/talend/designer/components/persistent</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <!-- from tdi-studio-se -->
          <execution>
            <id>copy-org.talend.designer.components.localprovider-lookup</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/designer/components/lookup</outputDirectory>
              <resources>
                <resource>
                  <directory>${tdi.studio.se.path}/org.talend.designer.components.localprovider/src/main/java/org/talend/designer/components/lookup</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <!-- from tcommon-studio-se -->
          <execution>
            <id>copy-org.talend.commons.runtime-map</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/commons/utils/data/map</outputDirectory>
              <resources>
                <resource>
                  <directory>${tcommon.studio.se.path}/org.talend.commons.runtime/src/org/talend/commons/utils/data/map</directory>
                  <includes>
                    <include>MultiLazyValuesMap.java</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <!-- from tcommon-studio-se -->
          <execution>
            <id>copy-org.talend.commons.runtime-time</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/commons/utils/time</outputDirectory>
              <resources>
                <resource>
                  <directory>${tcommon.studio.se.path}/org.talend.commons.runtime/src/org/talend/commons/utils/time</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
          <!-- from tcommon-studio-se -->
          <execution>
            <id>copy-org.talend.core.runtime-process</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/core/model/process</outputDirectory>
              <resources>
                <resource>
                  <directory>${tcommon.studio.se.path}/org.talend.core.runtime/src/main/java/org/talend/core/model/process</directory>
                  <includes>
                    <include>IMatchingMode.java</include>
                    <include>ILookupMode.java</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>

          <!-- Need this sources only for compilation to fake the compilation -->
          <!-- it's a hack not because of the easy life -->
          <!-- !!!NOTE: It should not be inside the jar!!! -->
          <!-- from tcommon-studio-se -->
          <execution>
            <id>copy-org.talend.librariesmanager-process</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/routines/system</outputDirectory>
              <resources>
                <resource>
                  <directory>${tcommon.studio.se.path}/org.talend.librariesmanager/resources/java/routines/system</directory>
                  <includes>
                    <include>IPersistableLookupRow.java</include>
                    <include>IPersistableComparableLookupRow.java</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
          <execution>
            <id>copy-org.talend.commons.runtime-process</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${gen.source.directory}/org/talend/commons/exception</outputDirectory>
              <resources>
                <resource>
                  <directory>${tcommon.studio.se.path}/org.talend.commons.runtime/src/org/talend/commons/exception</directory>
                  <includes>
                    <include>CommonExceptionHandler.java</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
