      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <includes>
            <include>${gen.source.directory}/**/*.java</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
